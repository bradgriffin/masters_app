<table class="front">
    <tr>
      <td class="main">
        <h1 class="selection">Available Golfers:</h1>
      </td>
    </tr>
  </table>
<table>
  <tr>
    <th>Selection</th>
    <th>Group</th>
    <th>Name</th>
  </tr>

  <% @groups.each do |f| %>
    <% @group = Golfer.where(:group_id => f) %>
    <%= form_tag selections_path, :method => :create do %>
      <% for golfer in @group %>
        <tr>
          <%= hidden_field_tag "golfer_id", golfer.id %>
          <td><%= submit_tag "Add" %></td>
          <td><%= golfer.group_id %></td>
          <td><%= golfer.name %></td>
        </tr> 
      <% end %>
    <% end %>


<% end %>
</table>

